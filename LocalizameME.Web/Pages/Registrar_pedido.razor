                <div class="row  align-items-center ">
                    <div class="col-4 ">
                        <label class="col-form-label ">Celular:</label>
                    </div>
                    <div class="col-6">
                        <input class="form-control">
                    </div>
                    <div class="col-2 text-center ">
                        <button type="button" class="btn btn-outline-success">Buscar</button>
                    </div>
                </div>

